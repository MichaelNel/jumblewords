<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wordist.mike.jumblewords.GameActivity"
    android:id="@+id/game_activity"
    android:background="@drawable/game_bg"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/button2"
        android:layout_below="@+id/print_string">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:layout_weight="3">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="V"
                android:id="@+id/button_5"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_margin="5dp"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button_6"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_weight="0.3"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/button_7"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_weight="0.3"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            android:layout_weight="3">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="F"
                android:id="@+id/button_3"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_weight="0.3"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="U"
                android:id="@+id/button_middle"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_margin="5dp"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal"
                android:elevation="10dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="T"
                android:id="@+id/button_4"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_margin="5dp"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/linearLayout2">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="S"
                android:id="@+id/button_0"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="R"
                android:id="@+id/button_1"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="I"
                android:id="@+id/button_2"
                android:onClick="add_char"
                android:background="@drawable/button_bg_2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_alignTop="@id/button_3"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textSize="40dp"
                android:textStyle="bold"
                android:typeface="normal" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test"
        android:id="@+id/print_string"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/words_found"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textSize="50dp"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/words_found"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="0.3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" />

    <Button
        app:layout_widthPercent="30%"
        app:layout_heightPercent="20%"
        android:text="@string/clear"
        android:id="@+id/button2"
        android:onClick="clear_player_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />


</RelativeLayout>
